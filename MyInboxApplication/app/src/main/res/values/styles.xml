<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ListItem" parent="android:Theme.Light">
        <item name="android:textColor">@color/MyBlack</item>
    </style>

    <style name="ItemSeparator" parent="ListItem">
        <item name="android:windowBackground">@color/MyPurple</item>
        <item name="android:colorBackground">@color/MyPurple</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/MyPurple</item>
    </style>

    <style name="CanceledEvent" parent="ListItem">
        <item name="android:windowBackground">@color/MyGrey</item>
        <item name="android:colorBackground">@color/MyGrey</item>
    </style>

    <style name="NormalEvent" parent="ListItem">
        <item name="android:windowBackground">@color/MyYellow</item>
        <item name="android:colorBackground">@color/MyYellow</item>
    </style>

    <style name="AllDayEvent" parent="ListItem">
        <item name="android:windowBackground">@color/MyRed</item>
        <item name="android:colorBackground">@color/MyRed</item>
    </style>

    <style name="OnMyOwnEvent" parent="ListItem">
        <item name="android:windowBackground">@color/MyGreen</item>
        <item name="android:colorBackground">@color/MyGreen</item>
    </style>

</resources>
