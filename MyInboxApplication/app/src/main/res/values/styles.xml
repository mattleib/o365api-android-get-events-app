<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/MyBlack</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style
        name="ActionBar.TitleText"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/MyWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListItem" parent="android:Theme.Light">
        <item name="android:textColor">@color/MyBlack</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ListItemWhite" parent="android:Theme.Light">
        <item name="android:textColor">@color/MyWhite</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ItemSeparator" parent="ListItemWhite">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
